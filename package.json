{
  "name": "resume.skillsync.io",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf \"src/public/styles/*\"",
    "sass": "node-sass --include-path src/public/sass src/public/sass/main.scss src/public/styles/site.css",
    "postsass": "postcss -r -c postcss.config.json src/public/styles/site.css && cssmin src/public/styles/site.css > src/public/styles/site.min.css",
    "serve": "nodemon src/bin/www",
    "start": "npm run clean && parallelshell \"npm run serve\" \"npm run watch\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "parallelshell \"npm run watch:sass\"",
    "watch:sass": "nodemon -e scss -w src/public/sass -x \"npm run sass\""
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "cssmin": "^0.4.3",
    "node-sass": "^3.3.3",
    "nodemon": "^1.7.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.2.0",
    "rimraf": "^2.4.3"
  },
  "dependencies": {
      "body-parser": "~1.13.2",
      "cookie-parser": "~1.3.5",
      "debug": "~2.2.0",
      "ejs": "~2.3.3",
      "express": "~4.13.1",
      "morgan": "~1.6.1",
      "serve-favicon": "~2.3.0"
  }
}
