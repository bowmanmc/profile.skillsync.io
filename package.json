{
  "name": "profile.skillsync.io",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "browsersync": "babel-node tools/serverBrowserSync",
    "clean": "rimraf \"src/public/styles/*\"",
    "presass": "sass-lint -c .sass-lint.yml -v",
    "sass": "node-sass --include-path src/assets/sass --include-path node_modules src/assets/sass/main.scss src/assets/styles/bundle.css",
    "postsass": "postcss -c postcss.config.json",
    "serve": "nodemon src/bin/www",
    "start": "npm run clean && parallelshell \"npm run serve\" \"npm run watch\" \"npm run browsersync\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "parallelshell \"npm run watch:sass\"",
    "watch:sass": "nodemon -e scss -w src/public/sass -x \"npm run sass\""
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-cli": "^6.18.0",
    "babel-core": "^5.8.38",
    "babel-loader": "^5.4.2",
    "babel-preset-es2015": "^6.18.0",
    "bourbon": "^4.2.7",
    "bourbon-neat": "^1.8.0",
    "browser-sync": "^2.18.2",
    "cssnano": "^3.8.0",
    "http-proxy-middleware": "^0.17.2",
    "node-sass": "^3.13.0",
    "nodemon": "^1.7.2",
    "normalize.css": "^5.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.2.0",
    "rimraf": "^2.4.3",
    "sass-lint": "^1.10.2"
  },
  "dependencies": {
    "autoprefixer": "^6.5.3",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "ejs": "~2.3.3",
    "express": "~4.13.1",
    "morgan": "~1.6.1",
    "serve-favicon": "^2.3.2"
  }
}
